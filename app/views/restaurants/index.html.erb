 <h1>LA FOURCHETTE DOREE</h1>
 <%= link_to "Ajouter un nouveau restaurant", new_restaurant_path %>
 <h3>Liste des restaurants</h3>
 <% @restaurants.each do |restaurant| %>
  <p><%= restaurant.name %></p>
  <p><%= restaurant.address %></p>
  <p><%= restaurant.phone_number %></p>
  <p><%= restaurant.category %></p>
  <%= link_to "Voir la fiche du restaurant", restaurant_path(restaurant) %>
  <br>
  <br>
  <% end %>
